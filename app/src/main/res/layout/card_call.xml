<android.support.v7.widget.CardView
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_call_relative_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_call_type"
            android:padding="12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_call_peers"
            android:padding="2dp"
            android:layout_toRightOf="@id/image_call_type"
            android:layout_toEndOf="@id/image_call_type"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_call_duration"
            android:padding="2dp"
            android:layout_below="@id/text_call_peers"
            android:layout_toRightOf="@id/image_call_type"
            android:layout_toEndOf="@id/image_call_type"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_call_date"
            android:padding="2dp"
            android:layout_below="@id/text_call_duration"
            android:layout_toRightOf="@id/image_call_type"
            android:layout_toEndOf="@id/image_call_type"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>